@using WebApplication7.Models
@model Comentario


<form method="post">
    <div class="form-group row">
        <label for="text" class="col-4 col-form-label">Text Field</label>
        <div class="col-8">
            <div class="input-group">
                <input id="Titulo" name="Titulo" type="text" value="@Model.Titulo" class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="textarea" class="col-4 col-form-label">Text Area</label>
        <div class="col-8">
            <textarea id="Descripcion" name="Descripcion" cols="40" rows="5" class="form-control">@Model.Descripcion</textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="select" class="col-4 col-form-label">Select</label>
        <div class="col-8">
            <select id="IdCategoria" name="IdCategoria" class="custom-select">
                <option >--Seleccione Categoria--</option>
                @foreach(Categoria cat in ViewBag.categorias) { 
                    <option value="@cat.Id">@cat.Nombre</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-4 col-8">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
@if(ViewBag.error!=null) { 
    <div class="alert alert-danger" role="alert">
        @ViewBag.error
    </div>
}
